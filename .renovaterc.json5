{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",

    extends: [
        "config:recommended",
        ":approveMajorUpdates",
        ":rebaseStalePrs",
        ":semanticPrefixChore",
        ":separateMultipleMajorReleases",
        "mergeConfidence:all-badges",
    ],

    ignorePresets: [
        ":semanticPrefixFixDepsChoreOthers",
    ],

    "postUpgradeTasks": {
        "commands": [
          "sh -c \"echo '# 2023' > Dockerfile\"",
          "git status",
        ],
        "fileFilters": [
          "**/*",
        ],
    },
}
